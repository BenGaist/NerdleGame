<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Nerdle" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- remove MaterialButton tinting -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
    </style>
    <style name="NerdleKey">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">#DBDBDB</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


    <style name="NerdlePopupButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>



</resources>