<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:fitsSystemWindows="true">

    <!-- Greeting -->

    <!-- Timer -->
    <LinearLayout
        android:id="@+id/timerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/timerIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_lock_idle_alarm"/>

        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="0:00"
            android:textSize="18sp"/>
    </LinearLayout>


    <GridLayout
        android:id="@+id/gridBoard"
        android:layout_width="410dp"
        android:layout_height="324dp"
        android:alignmentMode="alignMargins"
        android:columnCount="8"
        android:padding="8dp"
        android:rowCount="6"
        android:useDefaultMargins="true"
        app:layout_constraintBottom_toTopOf="@+id/bottomButtons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvGreeting"
        app:layout_constraintVertical_bias="0.084">

    </GridLayout>

    <GridLayout
        android:id="@+id/keyboard"
        android:layout_width="413dp"
        android:layout_height="188dp"
        android:alignmentMode="alignMargins"
        android:background="#B2B2B6"
        android:columnCount="6"
        android:padding="8dp"
        android:rowCount="4"
        android:useDefaultMargins="true"
        app:layout_constraintBottom_toTopOf="@+id/bottomButtons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvGreeting"
        app:layout_constraintVertical_bias="0.704">

        <!-- Numbers -->
        <Button
            style="@style/NerdleKey"
            android:text="1" />

        <Button
            style="@style/NerdleKey"
            android:text="2" />

        <Button
            style="@style/NerdleKey"
            android:text="3" />

        <Button
            style="@style/NerdleKey"
            android:text="4" />

        <Button
            style="@style/NerdleKey"
            android:text="5" />

        <Button
            style="@style/NerdleKey"
            android:text="6" />

        <Button
            style="@style/NerdleKey"
            android:text="7" />

        <Button
            style="@style/NerdleKey"
            android:text="8" />

        <Button
            style="@style/NerdleKey"
            android:text="9" />

        <Button
            style="@style/NerdleKey"
            android:text="0" />

        <!-- Operators -->
        <Button
            style="@style/NerdleKey"
            android:text="+" />

        <Button
            style="@style/NerdleKey"
            android:text="-" />

        <Button
            style="@style/NerdleKey"
            android:text="*" />

        <Button
            style="@style/NerdleKey"
            android:text="/" />

        <Button
            style="@style/NerdleKey"
            android:text="=" />

        <!-- Special Keys -->
        <Button
            style="@style/NerdleKey"
            android:layout_columnSpan="2"
            android:text="Enter" />

        <Button
            style="@style/NerdleKey"
            android:text="⌫" />
    </GridLayout>

    <!-- Loading Indicator -->
    <LinearLayout
        android:id="@+id/loadingContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/keyboard"
        app:layout_constraintBottom_toTopOf="@+id/bottomButtons">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Nerdle Wizards are doing their magic!"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- Start Message -->
    <TextView
        android:id="@+id/tvStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start!"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="@color/nerdle_green"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/keyboard"
        app:layout_constraintBottom_toTopOf="@+id/bottomButtons"/>

    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <android.widget.Button
            android:id="@+id/btnMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="menu"/>

        <View
            android:layout_width="16dp"
            android:layout_height="0dp"/>

        <android.widget.Button
            android:id="@+id/btnResults"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="results"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Hello player, let’s play Nerdle!"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/timerLayout"
        app:layout_constraintHorizontal_bias="0.158"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
