<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/popup_background">

    <!-- Title -->
    <TextView
        android:id="@+id/popupTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Good job!"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/nerdle_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/timerLayout"
        app:layout_constraintHorizontal_bias="0" />

    <!-- Timer + Icon -->
    <LinearLayout
        android:id="@+id/timerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/popupTimerIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_lock_idle_alarm"
            android:contentDescription="Timer icon" />

        <TextView
            android:id="@+id/popupTimerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:textSize="16sp"
            android:layout_marginStart="6dp"
            android:textColor="@color/nerdle_dark_gray" />
    </LinearLayout>

    <!-- Equation -->
    <TextView
        android:id="@+id/popupEquation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Equation here"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/nerdle_yellow"
        app:layout_constraintTop_toBottomOf="@id/popupTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Buttons -->
    <LinearLayout
        android:id="@+id/buttonRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/popupEquation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <android.widget.Button
            android:id="@+id/btnPlayAgain"
            style="@style/NerdlePopupButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play Again" />

        <android.widget.Button
            android:id="@+id/btnQuit"
            style="@style/NerdlePopupButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quit"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
